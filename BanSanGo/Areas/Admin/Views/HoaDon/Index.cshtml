@model IEnumerable<BanSanGo.Models.HoaDon>

@{
    ViewBag.Title = "Danh sách Hóa Đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Tạo Hóa Đơn Mới", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<div id="content">
    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 11%;">Ngày Tạo</th>
                <th style="width: 12.5%;">Trạng Thái</th>
                <th style="width: 12.5%;">Tên Khách Hàng</th>
                <th style="width: 12.5%;">Số Điện Thoại</th>
                <th style="width: 12.5%;">Địa Chỉ</th>
                <th style="width: 13.5%;">Tổng Tiền Phải Trả</th>
                <th style="width: 16.5%;">Hình Thức Thanh Toán</th>
                <th style="width: 10%;" class="text-center">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NgayTao)</td>
                    <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                    <td>@String.Format("{0:N0} VNĐ", item.TongTienPhaiTra)</td>
                    <td>@Html.DisplayFor(modelItem => item.HinhThucThanhToan)</td>
                    <td>
                        <div class="btn-group-vertical" role="group">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaHD }, new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaHD }, new { @class = "btn btn-sm btn-info mt-1" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaHD }, new { @class = "btn btn-sm btn-danger mt-1" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
