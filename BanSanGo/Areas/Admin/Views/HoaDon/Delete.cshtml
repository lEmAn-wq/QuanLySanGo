@model BanSanGo.Models.HoaDon

@{
    ViewBag.Title = "Xóa Hóa Đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">@ViewBag.Title</h2>

<h3 class="text-center text-danger">Bạn có chắc chắn muốn xóa hóa đơn này?</h3>

<div class="mb-4">
    <h4 class="text-muted">Thông Tin Hóa Đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 text-end">Ngày Tạo</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.NgayTao)</dd>

        <dt class="col-sm-3 text-end">Trạng Thái</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.TrangThai)</dd>

        <dt class="col-sm-3 text-end">Tên Khách Hàng</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.TenKH)</dd>

        <dt class="col-sm-3 text-end">Số Điện Thoại</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.SDT)</dd>

        <dt class="col-sm-3 text-end">Địa Chỉ</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.DiaChi)</dd>

        <dt class="col-sm-3 text-end">Tổng Tiền Phải Trả</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.TongTienPhaiTra)</dd>

        <dt class="col-sm-3 text-end">Hình Thức Thanh Toán</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.HinhThucThanhToan)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mb-3 row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Quay Về Danh Sách", "Index", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    </div>
}
