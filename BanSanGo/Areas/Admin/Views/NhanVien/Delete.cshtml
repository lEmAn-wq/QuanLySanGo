@model BanSanGo.Models.NhanVien

@{
    ViewBag.Title = "Xóa Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">@ViewBag.Title</h2>

<h3 class="text-center text-danger">Bạn có chắc chắn muốn xóa nhân viên này?</h3>

<div class="mb-4">
    <h4 class="text-muted">Thông Tin Nhân Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 text-end">Tên Nhân Viên</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.TenNV)</dd>

        <dt class="col-sm-3 text-end">Ngày Sinh</dt>
        <dd class="col-sm-9 text-start">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3 text-end">Giới Tính</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.GioiTinh)</dd>

        <dt class="col-sm-3 text-end">Số Điện Thoại</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.SDT)</dd>

        <dt class="col-sm-3 text-end">Số CCCD</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.SoCCCD)</dd>

        <dt class="col-sm-3 text-end">Email</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3 text-end">Chức Vụ</dt>
        <dd class="col-sm-9 text-start">@Html.DisplayFor(model => model.ChucVu.TenCV)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mb-3 row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Quay Về Danh Sách", "Index", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    </div>
}
