@model IEnumerable<BanSanGo.Models.NhanVien>

@{
    ViewBag.Title = "Danh sách Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Tạo Nhân Viên Mới", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Tên Nhân Viên</th>
                <th>Ngày Sinh</th>
                <th>Giới Tính</th>
                <th>Số Điện Thoại</th>
                <th>Số CCCD</th>
                <th>Email</th>
                <th>Chức Vụ</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenNV)</td>
                    <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                    <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoCCCD)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.ChucVu.TenCV)</td>
                    <td>
                        <div class="btn-group-vertical" role="group">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }, new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaNV }, new { @class = "btn btn-sm btn-info mt-1" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV }, new { @class = "btn btn-sm btn-danger mt-1" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
