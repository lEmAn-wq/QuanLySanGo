@model BanSanGo.Models.LoaiSanGo

@{
    ViewBag.Title = "Sửa Loại Sản Gỗ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center my-4">@ViewBag.Title</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card p-3 shadow-lg border-0" style="background: linear-gradient(to right, #ece9e6, #ffffff);">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(model => model.MaLoaiSanGo)

                    <!-- Hiển thị tên loại sản gỗ cũ -->
                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label text-end fw-bold">Tên Loại Sản Gỗ Cũ <i class="fas fa-id-badge"></i></label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext">@Model.TenLoaiSanGo</p>
                        </div>
                    </div>

                    <!-- Trường chỉnh sửa tên loại sản gỗ mới -->
                    <div class="mb-3 row">
                        <label for="TenLoaiSanGo" class="col-sm-3 col-form-label text-end fw-bold">Tên Loại Sản Gỗ Mới <i class="fas fa-pencil-alt"></i></label>
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.TenLoaiSanGo, new { htmlAttributes = new { @class = "form-control", @id = "TenLoaiSanGo" } })
                            @Html.ValidationMessageFor(model => model.TenLoaiSanGo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Nút Lưu và Quay lại -->
                    <div class="mb-3 row">
                        <div class="col-sm-9 offset-sm-3">
                            <button type="submit" class="btn btn-success">Lưu <i class="fas fa-save"></i></button>
                            <a href="@Url.Action("Index", "LoaiSanGo")" class="btn btn-secondary ms-2">Quay lại <i class="fas fa-arrow-left"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
