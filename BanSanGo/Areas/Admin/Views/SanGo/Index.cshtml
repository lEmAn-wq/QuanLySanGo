@model IEnumerable<BanSanGo.Models.SanGo>

@{
    ViewBag.Title = "Danh sách Sàn Gỗ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center my-4">@ViewBag.Title</h2>

            <div class="text-right mb-3">
                @Html.ActionLink("Tạo mới sản phẩm", "Create", null, new { @class = "btn btn-primary" })
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover text-center align-middle">
                    <thead class="thead-dark">
                        <tr>
                            <th>Tên Sản Gỗ</th>
                            <th>Số Lượng</th>
                            <th>Giá Bán (VNĐ)</th>
                            <th>Hình Ảnh</th>
                            <th>Loại Sàn Gỗ</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TenSanGo)</td>
                                <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                <td>@String.Format("{0:N0} VNĐ", item.GiaBan)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        <img src="@item.HinhAnh" alt="Hình ảnh sản phẩm" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                    }
                                    else
                                    {
                                        <span>Chưa có hình ảnh</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.LoaiSanGo.TenLoaiSanGo)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaSanGo }, new { @class = "btn btn-warning btn-sm me-2" })
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSanGo }, new { @class = "btn btn-info btn-sm me-2" })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaSanGo }, new { @class = "btn btn-danger btn-sm" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
