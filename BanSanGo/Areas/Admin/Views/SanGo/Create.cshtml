@model BanSanGo.Models.SanGo

@{
    ViewBag.Title = "Tạo Mới Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center my-4">@ViewBag.Title</h2>

            @using (Html.BeginForm("Create", "SanGo", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="card p-4 shadow-lg border-0" style="background: linear-gradient(to right, #ece9e6, #ffffff);">
                    <h4 class="card-title">Thông tin sản phẩm</h4>
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Tên sản phẩm -->
                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.TenSanGo, "Tên sản phẩm", htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-end" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.TenSanGo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenSanGo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Số lượng -->
                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.SoLuong, "Số lượng", htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-end" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Giá bán -->
                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.GiaBan, "Giá bán (VNĐ)", htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-end" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Loại sản gỗ -->
                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.MaLoaiSanGo, "Loại sản gỗ", htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-end" })
                        <div class="col-md-9">
                            @Html.DropDownList("MaLoaiSanGo", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaLoaiSanGo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Mô tả -->
                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.MoTa, "Mô tả sản phẩm", htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-end" })
                        <div class="col-md-9">
                            <textarea name="MoTa" class="form-control" rows="5">@Html.DisplayFor(model => model.MoTa)</textarea>
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Hình ảnh -->
                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.HinhAnh, "Chọn hình ảnh", htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-end" })
                        <div class="col-md-9">
                            <input type="file" name="HinhAnh" class="form-control" />
                            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Nút submit -->
                    <div class="form-group row mb-3">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" class="btn btn-primary">Tạo sản phẩm <i class="fas fa-plus-circle"></i></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="text-center mt-4">
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>
