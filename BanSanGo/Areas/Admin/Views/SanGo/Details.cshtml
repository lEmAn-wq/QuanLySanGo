@model BanSanGo.Models.SanGo

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2 class="text-center display-4 my-4">@ViewBag.Title</h2>

            <div class="card shadow-lg mb-4" style="background: linear-gradient(to right, #fff, #e0e0e0); border-radius: 15px;">
                <div class="card-header bg-primary text-white" style="border-radius: 15px 15px 0 0;">
                    <h4 class="m-0"><i class="fas fa-info-circle"></i> @Model.TenSanGo</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Thông tin sản phẩm -->
                        <div class="col-md-6">
                            <h5 class="text-primary"><i class="fas fa-tag"></i> Thông tin sản phẩm</h5>
                            <dl class="row">
                                <dt class="col-sm-5 text-end"><i class="fas fa-archive"></i> Tên Sản Gỗ:</dt>
                                <dd class="col-sm-7 mb-3">@Html.DisplayFor(model => model.TenSanGo)</dd>

                                <dt class="col-sm-5 text-end"><i class="fas fa-boxes"></i> Số Lượng:</dt>
                                <dd class="col-sm-7 mb-3">@Html.DisplayFor(model => model.SoLuong)</dd>

                                <dt class="col-sm-5 text-end"><i class="fas fa-dollar-sign"></i> Giá Bán (VND):</dt>
                                <dd class="col-sm-7 mb-3">@String.Format("{0:N0} VNĐ", Model.GiaBan)</dd>

                                <dt class="col-sm-5 text-end"><i class="fas fa-align-left"></i> Mô Tả:</dt>
                                <dd class="col-sm-7 mb-3" style="word-wrap: break-word;">@Html.DisplayFor(model => model.MoTa)</dd>

                                <dt class="col-sm-5 text-end"><i class="fas fa-clipboard-list"></i> Loại Sàn Gỗ:</dt>
                                <dd class="col-sm-7 mb-3">@Html.DisplayFor(model => model.LoaiSanGo.TenLoaiSanGo)</dd>
                            </dl>
                        </div>

                        <!-- Hình ảnh sản phẩm -->
                        <div class="col-md-6">
                            <h5 class="text-primary"><i class="fas fa-image"></i> Hình ảnh sản phẩm</h5>
                            <div class="text-center">
                                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                                {
                                    <img src="@Model.HinhAnh" alt="Hình ảnh sản phẩm" class="img-fluid rounded shadow-sm" style="max-width: 100%; height: auto;" />
                                }
                                else
                                {
                                    <p class="text-muted">Chưa có hình ảnh</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted d-flex justify-content-between">
                    <div>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaSanGo }, new { @class = "btn btn-warning btn-sm me-2" })
                        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary btn-sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
