@model dynamic

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card p-4 shadow-lg border-0" style="background: linear-gradient(to right, #ffffff, #f8f9fa); border-radius: 15px;">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewBag.Title</h2>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label for="emailOrSDT" class="fw-bold">Tài khoản:</label>
                            <input type="text" name="emailOrSDT" id="emailOrSDT" placeholder="Email hoặc SĐT" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="fw-bold">Mật khẩu:</label>
                            <input type="password" name="password" id="password" class="form-control" required />
                        </div>
                        <div class="form-group text-center mb-3">
                            <button type="submit" class="btn btn-primary">Đăng Nhập <i class="fas fa-sign-in-alt"></i></button>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    }
                    <div class="text-center">
                        <a href="@Url.Action("ForgotPassword", "GetPassword")" class="btn btn-link">Quên mật khẩu?</a>
                        <span>|</span>
                        <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-link">Đổi mật khẩu</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
